
<p id="notice"><%= notice %></p>

<h1>Manual Control</h1>

<% for control in @controls %>

<table valign="middle">

  <tr>
    <th width="50%"> <h3><%= control.name %></h3> </th>
    <td width="50%">
      <label class="switch">
        <input type="checkbox" id="toggle" name="<%= control.id %>"<%="checked" if control.automated %> >
        <div class="slider round"></div>
      </label>
    </td>
  </tr>

</table>

<% end %>

